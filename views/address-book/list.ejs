<%- include('../parts/html-header') %> <%- include('../parts/navbar') %>
<div class="container">
  <div class="row">
    <div class="col">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item <%= page === 1 ? "disabled":'' %>"><a class="page-link " href="?<%= new URLSearchParams({...conditions,page:page-1})%>">Previous</a></li>
          <% for(let i=1; i<=totalPages ; i++){ %>
          <li class="page-item <%= page === i ? "active":'' %>"><a class="page-link" href="?<%= new URLSearchParams({...conditions,page:i})%>"><%=i%></a></li>
        <% }%>
          <l class="page-item <%= page === totalPages ? "disabled":'' %>"><a class="page-link" href="?<%= new URLSearchParams({...conditions,page:page+1})%>">Next</a></li>
        </ul>
      </nav>
    </div>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"><i class="fas fa-trash-alt"></i></th>
        <th scope="col">name</th>
        <th scope="col">email</th>
        <th scope="col">mobile</th>
        <th scope="col">bday</th>
        <th scope="col">address</th>
        <th scope="col"><i class="fas fa-edit"></i></th>
      </tr>
    </thead>
    <tbody>
      <% for (let i of rows){ %>
      <tr>
        <td><a href="/address-book/delete/<%= i.sid%>" onclick="return confirm('確定刪除?')"><i class="fas fa-trash-alt"></i></a></td>
        <td><%= i.name%></td>
        <td><%= i.email%></td>
        <td><%= i.mobile%></td>
        <td><%= i.birthday%></td>
        <td><%= i.address%></td>
        <td><a href="/address-book/edit/<%= i.sid%>"><i class="fas fa-edit"></i></a></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<%- include('../parts/scripts') %> <%- include('../parts/html-foot') %>
